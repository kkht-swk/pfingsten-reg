{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ 'team.summary.title'|trans }} {% endblock %}
{% block body %}
    <!-- md container breaks if smaller than 768-->
    <div class="container p-4">
      <div class="row text-center justify-content-center mb-5">
        <div class="col-auto gy-3">
          <img src="{{ asset('pics/KKHT-logo.png') }}" alt="KKHT SWK Logo" class="kkhtlogo">
          <h1>{{ 'team.heading'|trans }}</h1> <span class="number">2024</span>
        </div>
      </div>
      <div class="row">
        <div class="col">
          {{ 'team.summary.text'|trans({
            'team_name': teamInfo.verein,
            'team_ak': teamInfo.altersklasse,
            'kontakt_email': teamInfo.kontakt.email 
          })|raw}}
        </div>
      </div>
    </div>
{% endblock %}
